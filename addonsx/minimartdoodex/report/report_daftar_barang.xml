<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_barang_template_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="br">    
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>LAPORAN BARANG</h1>
                        <div class="row">
                            <div class="col-4">
                                Nama Barang :
                            </div>
                            <div class="col-8">
                                <span t-field="br.nama_barang"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Harga Modal :
                            </div>
                            <div class="col-8">
                                <span t-field="br.harga_modal"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Harga Jual :
                            </div>
                            <div class="col-8">
                                <span t-field="br.harga"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Stok        :
                            </div>
                            <div class="col-8">
                                <span t-field="br.stok"/>
                            </div>
                        </div>
                        <div class="row">
                        
                            <table class="table table-striped">
                                <thead>
                                    <th>Nama Perusahaan</th>
                                    <th>Alamat</th>
                                    <th>Contact Person</th>
                                    <th>No. Telp</th>
                                </thead>
                                <t t-foreach="br.supplier_ids" t-as="brs">
                                    <tr>
                                        <td><span t-esc="brs.name"/></td>
                                        <td><span t-esc="brs.alamat"/></td>
                                        <td><span t-esc="brs.cp"/></td>
                                        <td><span t-esc="brs.telp"/></td>
                                    </tr>
                                </t>
                            </table>   
                        </div>
                    </div>
                </t>
            </t>
        </t>
        
    </template>
    

</odoo>
